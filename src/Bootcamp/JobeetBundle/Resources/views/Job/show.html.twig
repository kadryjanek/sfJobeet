{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Job'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Job</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Companyname</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.companyName }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Type</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.type }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Logo</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.logo }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Url</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.url }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Position</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.position }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Location</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.location }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Description</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.description }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Howtoapply</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.howToApply }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Email</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.email }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('job') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('job_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('job_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}